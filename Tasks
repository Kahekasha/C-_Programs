           //Write a program in C# Sharp to create a user define function with parameters.
	Test Data :
	Please input a name : Iqra
	Expected Output :
	Welcome friend Iqra !
	Have a nice day!


using System;


public class test
{
    public static void name(string n){

        Console.WriteLine($"Welcome friend {n}!");
        Console.WriteLine( "Have a nice Day");
    }
public static void Main(String[] args)
    {
        Console.WriteLine("Please input a name");
        string userinp = Console.ReadLine();
        test.name(userinp);

    }
}

               //Write a C# program to add two numbers using function.

using System;


public class test
{
    public static void Add(int a, int b){

        Console.WriteLine($"YOu entered {a} and {b}");
        int sum = a + b;
        Console.WriteLine( "The sum is  "+sum);
    }
public static void Main(String[] args)
    {
        Console.WriteLine("Please enter numbers to sum");
        int userinp1 = int.Parse(Console.ReadLine());
        int userinp2 = int.Parse(Console.ReadLine());

        test.Add(userinp1, userinp2);

    }

//Write a C# program to add two numbers using function.























          //Write C# program to create calculator using switch Statement

using System;
using System.Numerics;
using System.Threading.Channels;
using static System.Net.Mime.MediaTypeNames;

class program
{
    
    public static void Main(string[] args)
    {
        Console.WriteLine("enter the airthmatic operators");
        string input1 = Console.ReadLine();
        Console.WriteLine(input1);
        Console.WriteLine("enter the Number ");
        int Num1 = int.Parse(Console.ReadLine());
        Console.WriteLine(Num1);
        Console.WriteLine("enter the second Number ");
        int Num2 = int.Parse(Console.ReadLine());
        Console.WriteLine(Num2);
        switch (input1)
        {
            case "+":
                Console.WriteLine(Num1 + Num2);
                break;
            case "-":
                Console.WriteLine(Num1 - Num2);
                break;
            case "*":
                Console.WriteLine(Num1 / Num2);
                break;

        }


    }

}

    //Write C# program to check even or odd number using switch case

using System;
using System.Numerics;
using System.Threading.Channels;
using static System.Net.Mime.MediaTypeNames;

class program
{
    
    public static void Main(string[] args)
    {
       
       
        Console.WriteLine("enter the Number ");
       
        int Num2 = int.Parse(Console.ReadLine());
        Console.WriteLine(Num2);
        switch (Num2 % 2 )
        {
            case 0:
                Console.WriteLine("Even");
                break;
            case 1:
                Console.WriteLine("Odd");
                break;
            default:
                Console.WriteLine("odd");
                break;


        }


    }

}



