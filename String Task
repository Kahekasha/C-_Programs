using System;
using System.Numerics;
using System.Threading.Channels;
using static System.Net.Mime.MediaTypeNames;

class program
{
    //Write a program in C# Sharp to create a
    //function to input a string and count number of spaces are in the string. 
  // Test Data :

   // Please input a string : This is a test string.
	//Expected Output :"This is a test string." contains 4 spaces
    public static void Main(string[] args)
    {
        int sum = 0;
        string s = " This is a test string.";
        for(int i = 0; i < s.Length; i++) {
            if (s[i] == ' ')
            {
sum = sum + 1;
            }
           
        }
        Console.WriteLine("contains" + sum + "spaces");
       /* bool result = s.Contains( " ");
        Console.WriteLine(result.length);*/

    }

}
